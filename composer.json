{
  "name": "10up/elasticpress-labs",
  "description": "A developer focused interface to commonly ElasticPress plugin issues.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "10up",
      "email": "info@10up.com",
      "homepage": "https://10up.com",
			"role": "Developer"
    }
  ],
  "require": {
    "php": "^7.0|^8.0"
  },
  "autoload": {
    "psr-4": {
      "ElasticPressLabs\\": "includes/classes/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "10up/wp_mock": "dev-trunk",
    "10up/phpcs-composer": "dev-master",
    "10up/elasticpress": "*",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "scripts": {
    "lint": "phpcs .",
    "lint-fix": "phpcbf .",
    "test": "phpunit",
    "setup-local-tests": "bash bin/install-wp-tests.sh epl_wp_test root password mysql trunk true"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
